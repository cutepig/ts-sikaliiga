{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-boolean-value": [true, "never"],
    "jsx-no-lambda": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore", "allow-trailing-underscore"]
  }
}
